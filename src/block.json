{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "hero-landing-poem/hero-landing-poem",
  "version": "0.1.0",
  "title": "Hero Landing Poem",
  "category": "widgets",
  "icon": "edit-large",
  "description": "A full-screen hero with a typewriter poem background and centered, block-based content.",
  "supports": {
    "html": false,
    "align": ["full"]
  },
  "attributes": {
    "background_text": {
      "type": "string"
    },
    "background_text_size": {
      "type": "string"
    },
    "background_font_family": {
      "type": "string"
    },
    "background_font_weight": {
      "type": "string"
    },
    "background_font_style": {
      "type": "string",
      "default": "normal"
    },
    "background_line_height": {
      "type": "number"
    },
    "background_letter_spacing": {
      "type": "number"
    },
    "background_color": {
      "type": "string"
    },
    "background_image_url": {
      "type": "string"
    },
    "container_background_color": {
      "type": "string"
    },
    "background_opacity": {
      "type": "number",
      "default": 0.4
    },
    "enable_opacity_animation": {
      "type": "boolean",
      "default": false
    },
    "opacity_animation_duration": {
      "type": "number",
      "default": 3000
    },
    "typing_speed": {
      "type": "number",
      "default": 50
    },
    "start_delay": {
      "type": "number",
      "default": 1000
    },
    "text_align": {
      "type": "string",
      "default": "top-left"
    },
    "text_position_vertical": {
      "type": "string",
      "default": "flex-start"
    },
    "text_position_horizontal": {
      "type": "string",
      "default": "flex-start"
    },
    "arrow_fade_in_delay": {
      "type": "number",
      "default": 300
    },
    "arrow_bottom_spacing": {
      "type": "string",
      "default": "3rem"
    }
  },
  "textdomain": "hero-landing-poem",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:../hero-landing-poem.php"
}
